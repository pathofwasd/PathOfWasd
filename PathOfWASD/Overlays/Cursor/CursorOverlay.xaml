<Window x:Class="PathOfWASD.Overlays.Cursor.CursorOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Focusable="False"
        ShowInTaskbar="False"
        Topmost="True"
        Cursor="None">
    <Grid Background="#01000000">        
        <Canvas>
            <Image
                x:Name="CursorVisual"
                Width="{Binding CursorSize}"
                Height="{Binding CursorSize}"
                Stretch="Uniform"/>
        </Canvas>
    </Grid>
</Window>
